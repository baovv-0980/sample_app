<li>
  <%= gravatar_for(user, size: Settings.users.show.size_gravata_min) %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to t(".delete"), user, method: :delete,
                                  data: { confirm: t(".sure") } %>
  <% end %>
</li>
