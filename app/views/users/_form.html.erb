<%= form_for(@user) do |form|%>

  <div class="form-group">
    <%= form.label :name, t(".label_name") %>
    <%= form.text_field :name, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :email, t(".label_email") %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password, t(".label_pass") %>
    <%= form.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation, t(".label_pass_confirm") %>
    <%= form.password_field :password_confirmation, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit value: submit_text, class: "btn btn-primary"%>
  </div>
<% end %>
