<%= provide :title, @user.name %>
<div id="show" class="row">
  <div class="col-md-4">
     <aside>
      <section class="user_info">
        <h1>
          <%= gravatar_for(@user, Settings.users.show.size_gravata_max) %>
          <p><%= @user.name %></p>
        </h1>
      </section>
    </aside>
  </div>

  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
