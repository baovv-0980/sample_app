<% provide(:title, t(".title_begin")) %>
<div id="login" class="container">
  <h1 class="center"><%= t ".title_begin"%></h1>
  <%= form_for(:session, url: login_path) do |form|%>

    <div class="form-group">
      <%= form.label :email, t(".label_email") %>
      <%= form.text_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password, t(".label_pass") %>
      <%= form.password_field :password, class: "form-control" %>
    </div>

    <%= form.label :remember_me, class: "checkbox inline" do %>
      <%= form.check_box :remember_me %>
      <span><%= t ".remember" %></span>
    <% end %>

    <div class="actions">
      <%= form.submit t(".submit"), class: "btn btn-primary"%>
    </div>

  <% end %>

  <p class="signup">
    <%= t ".new_user" %>
    <%= link_to t(".signup"), signup_path %>
  </p>
</div>

